{
  "name": "@plasmo/bpp",
  "version": "3.8.0",
  "private": true,
  "description": "Browser Platform Publisher",
  "module": "lib/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:compile": "esbuild src/main.ts --sourcemap --bundle --watch --platform=node --outfile=dist/index.js",
    "dev:test": "jest --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "build": "esbuild src/main.ts --platform=node --minify --bundle --outfile=dist/index.js",
    "test": "jest",
    "test:ss": "jest --updateSnapshot",
    "package": "run-s format build test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmohq/bpp.git"
  },
  "keywords": [
    "browser-extensions",
    "chrome",
    "firefox",
    "edge",
    "safari",
    "actions"
  ],
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@plasmohq/bms": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@plasmo/config": "workspace:*",
    "@plasmohq/rps": "1.8.7",
    "@types/node": "22.9.0",
    "esbuild": "0.25.0",
    "jest": "29.7.0",
    "js-yaml": "4.1.0",
    "ts-jest": "29.2.5",
    "typescript": "5.6.3"
  }
}
