{
  "name": "@plasmo/bpp",
  "version": "2.1.0",
  "private": true,
  "description": "Browser Platform Publisher",
  "main": "lib/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:build": "esbuild src/main.ts --bundle --watch --platform=node --outfile=dist/index.js",
    "dev:test": "jest --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "esbuild src/main.ts --platform=node --minify --bundle --outfile=dist/index.js",
    "test": "jest",
    "all": "run-s format lint package test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmo-corp/bpp.git"
  },
  "keywords": [
    "browser-extensions",
    "chrome",
    "firefox",
    "safari",
    "actions"
  ],
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@plasmo-corp/bms": "1.7.0"
  },
  "devDependencies": {
    "@jest/globals": "27.5.1",
    "@plasmo-corp/rps": "1.2.1",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "esbuild": "0.14.36",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  }
}
